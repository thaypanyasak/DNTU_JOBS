@model Dictionary<string, int>
@{
    ViewData["Title"] = "User Manager - Roles";
    Layout = null;
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Manrope', sans-serif;
            background-color: #f4f6f9;
            color: #495057;
            margin-top : 50px;
        }

        h2 {
            color: #343a40;
            font-weight: 600;
            margin-top: 20px;
        }

        .table-container {
            margin: 30px auto;
            max-width: 1000px;
        }

        .table {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

            .table thead {
                background-color: #343a40;
                color: #ffffff;
                font-weight: 600;
            }

            .table tbody tr {
                transition: all 0.3s;
            }

                .table tbody tr:hover {
                    background-color: #f1f1f1;
                }

            .table th, .table td {
                padding: 15px;
                vertical-align: middle;
            }

        .btn-primary {
            background-color: #343a40;
            border: none;
            color: #ffffff;
            transition: background-color 0.3s ease, transform 0.3s ease;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #50575d;
                transform: translateY(-2px);
            }

        .icon-style {
            color: #adb5bd;
            font-size: 1.3rem;
            margin-right: 8px;
        }

        .badge-light {
            background-color: #e9ecef;
            font-size: 0.9rem;
            color: #495057;
            border-radius: 8px;
            padding: 5px 10px;
        }
    </style>
</head>

<h2 class="text-center mb-4">User Roles</h2>

<div class="table-container">
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th><i class="fas fa-user-tag icon-style"></i> Role</th>
                <th><i class="fas fa-users icon-style"></i> User Count</th>
                <th><i class="fas fa-tasks icon-style"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td class="font-weight-bold">
                        @if (role.Key == "Admin")
                        {
                            <i class="fas fa-user-shield icon-style"></i> @role.Key
                        }
                        else if (role.Key == "Employer")
                        {
                            <i class="fas fa-briefcase icon-style"></i> @role.Key
                        }
                        else if (role.Key == "User")
                        {
                            <i class="fas fa-user icon-style"></i> @role.Key
                        }
                    </td>
                    <td>
                        <span class="badge badge-light">@role.Value</span>
                    </td>
                    <td>
                        <a asp-action="ListUsersByRole" asp-route-role="@role.Key" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i> View Users
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
