@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<style>
    body {
        background-color: #eef2f7;
        font-family: 'Poppins', sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .forgot-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;

    }

    .forgot-card {
        background-color: #fff;
        border-radius: 12px;
        padding: 40px 30px;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .forgot-card h1 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .forgot-card p {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 20px;
        }

    .form-floating input {
        font-size: 1rem;
        padding: 12px;
        border: 1px solid #dcdfe3;
        border-radius: 8px;
        margin-bottom: 15px;
        width: 100%;
    }

        .form-floating input:focus {
            border-color: #3498db;
            outline: none;
        }

    .btn-primary {
        background-color: #3498db;
        color: #fff;
        padding: 12px;
        font-size: 1rem;
        border: none;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 20px 0;
    }

        .divider::before, .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #ddd;
        }

        .divider span {
            padding: 0 10px;
            color: #aaa;
            font-size: 0.85rem;
        }

    .return-login {
        font-size: 0.85rem;
        color: #3498db;
        text-decoration: none;
        display: block;
        margin-top: 15px;
    }

        .return-login:hover {
            text-decoration: underline;
        }

    .form-icon {
        position: relative;
    }

        .form-icon i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }

    .form-floating input {
        padding-left: 35px;
    }
</style>

<div class="forgot-container">
    <div class="forgot-card">
        <h1>Quên mật khẩu?</h1>
        <p>Vui lòng nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating form-icon">
                <i class="fas fa-envelope"></i>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gửi liên kết đặt lại mật khẩu</button>
        </form>
        <div class="divider"><span>hoặc</span></div>
        <a href="#" class="return-login">Quay lại đăng nhập</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
