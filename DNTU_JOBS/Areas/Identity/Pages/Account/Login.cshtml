@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600&display=swap" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'Manrope', sans-serif;
            color: #333;
        }

        .login-container {
            max-width: 530px;
            margin: 5% auto;
            padding: 30px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .login-header h1 {
            font-size: 2.2rem;
            font-weight: 600;
            color: #024B85;
            margin-bottom: 30px;
            text-align: center;
            font-family: 'Manrope', sans-serif;
        }

        .form-floating input, .form-floating select {
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 10px;
        }

        .btn-login {
            background-color: #024B85;
            color: white;
            font-size: 18px;
            padding: 12px;
            width: 100%;
            border-radius: 8px;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-login:hover {
            background-color: #023a69;
        }

        .btn-google, .btn-facebook {
            font-size: 16px;
            padding: 12px;
            border-radius: 8px;
            width: 100%;
            border: none;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-google {
            background-color: #db4437;
            color: white;
            margin-bottom: 15px; /* Thêm khoảng cách giữa nút Google và Facebook */
        }

        .btn-google:hover {
            background-color: #c1351d;
        }

        .btn-facebook {
            background-color: #4267b2;
            color: white;
        }

        .btn-facebook:hover {
            background-color: #365899;
        }

        .btn-google i, .btn-facebook i {
            margin-right: 10px;
        }

        .forgot-password, .register-link {
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 10px;
        }

        .forgot-password:hover, .register-link:hover {
            text-decoration: underline;
        }

        .divider {
            text-align: center;
            margin: 20px 0;
        }

        .divider span {
            background-color: #ddd;
            padding: 0 10px;
            font-size: 14px;
            color: #888;
        }

        /* Custom style for positioning the Forgot password link */
        .forgot-password-container {
            position: relative;
        }

        .forgot-password {
            position: absolute;
            right: 0;
            bottom: -25px;
            font-size: 13px;
        }

        /* Styles for the eye icon */
        .password-wrapper {
            position: relative;
        }

        .password-wrapper .toggle-password {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            color: #aaa;
            cursor: pointer;
            font-size: 1.1rem;
        }

        .form-floating input {
            padding-right: 45px; /* Khoảng cách để biểu tượng mắt không che khuất văn bản */
        }

        /* Responsive adjustments if needed */
        @@media (max-width: 576px) {
            .password-wrapper .toggle-password {
                right: 10px;
            }

            .form-floating input {
                padding-right: 35px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="login-header">
                <h1>@ViewData["Title"]</h1>
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }


            <!-- Login Form -->
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" id="email" autocomplete="username" placeholder="email@domain.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="form-floating mb-3 password-wrapper">
                    <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" placeholder="Mật khẩu" value="kingslove3G!" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <i class="fas fa-eye toggle-password" id="togglePassword" aria-label="Toggle password visibility" title="Xem/Ẩn mật khẩu"></i>
                    <a href="@Url.Page("./ForgotPassword")" class="forgot-password">Quên mật khẩu?</a>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" for="rememberMe">Ghi nhớ tôi</label>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn btn-login">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </button>
            </form>

            <div class="divider">
                <span>HOẶC</span>
            </div>

            <form method="post" asp-page="./ExternalLogin" asp-route-provider="Google">
                <button type="submit" class="btn btn-google">
                    <i class="fab fa-google"></i> Đăng nhập bằng Google
                </button>
            </form>

            <form method="post" asp-page="./ExternalLogin" asp-route-provider="Facebook">
                <button type="submit" class="btn btn-facebook">
                    <i class="fab fa-facebook-f"></i> Đăng nhập bằng Facebook
                </button>
            </form>

            <!-- Links -->
            <div class="text-center mt-3">
                <a href="@Url.Page("./Register")" class="register-link">Đăng ký tài khoản mới</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const togglePassword = document.getElementById('togglePassword');
                const password = document.getElementById('password');

                togglePassword.addEventListener('click', function () {
                    // Toggle the type attribute
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);

                    // Toggle the eye / eye-slash icon
                    this.classList.toggle('fa-eye-slash');
                });
            });
        </script>
    }
</body>
</html>
