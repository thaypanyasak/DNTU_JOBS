@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<head>
    <!-- Bao gồm Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pcZ0SPN3b+uH36NxPp6+ZRwbYw0aT9d5r2UGPkSG+g5VqXiCtfk+S37Ub7iE1X2eFSgjVzje3V68r6Uy2sKXtw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>
    body {
        background-color: #eef2f7;
        font-family: 'Poppins', sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .reset-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .reset-card {
        background-color: #fff;
        border-radius: 12px;
        padding: 40px 30px;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .reset-card h1 {
        font-size: 1.8rem;
        color: #2c3e50;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .reset-card p {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-bottom: 20px;
    }

    .form-floating input {
        font-size: 1rem;
        padding: 12px;
        border: 1px solid #dcdfe3;
        border-radius: 8px;
        margin-bottom: 15px;
        width: 100%;
    }

    .form-floating input:focus {
        border-color: #3498db;
        outline: none;
    }

    .btn-primary {
        background-color: #3498db;
        color: #fff;
        padding: 12px;
        font-size: 1rem;
        border: none;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 20px 0;
    }

    .divider::before, .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #ddd;
    }

    .divider span {
        padding: 0 10px;
        color: #aaa;
        font-size: 0.85rem;
    }

    .forgot-password {
        font-size: 0.85rem;
        color: #3498db;
        text-decoration: none;
        display: block;
        margin-top: 15px;
    }

    .forgot-password:hover {
        text-decoration: underline;
    }

    @@media screen and (max-width: 480px) {
        .reset-card {
            padding: 20px;
        }

        .reset-card h1 {
            font-size: 1.5rem;
        }
    }

    .form-icon {
        position: relative;
        margin-bottom: 15px;
    }

    /* Biểu tượng bên trái */
    .form-icon .left-icon {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
    }

    /* Biểu tượng mắt bên phải */
    .form-icon .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
        cursor: pointer;
    }

    /* Điều chỉnh padding cho input để không bị che khuất bởi các biểu tượng */
    .form-icon input {
        padding-left: 35px; /* Khoảng cách cho biểu tượng bên trái */
        padding-right: 35px; /* Khoảng cách cho biểu tượng mắt bên phải */
    }
</style>

<div class="reset-container">
    <div class="reset-card">
        <h1>Đặt lại mật khẩu</h1>
        <p>Vui lòng nhập email và mật khẩu mới để đặt lại tài khoản của bạn.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            
            <!-- Trường Email -->
            <div class="form-floating form-icon">
                <i class="fas fa-envelope left-icon"></i>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <!-- Trường Mật khẩu mới -->
            <div class="form-floating form-icon">
                <i class="fas fa-lock left-icon"></i>
                <input id="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu mới" type="password" />
                <i id="togglePassword" class="fas fa-eye toggle-password"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <!-- Trường Xác nhận mật khẩu -->
            <div class="form-floating form-icon">
                <i class="fas fa-lock left-icon"></i>
                <input id="confirmPassword" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" type="password" />
                <i id="toggleConfirmPassword" class="fas fa-eye toggle-password"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
        </form>
        <div class="divider"><span>hoặc</span></div>
        <a href="#" class="forgot-password">Quay lại đăng nhập</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.getElementById('togglePassword');
            const password = document.getElementById('password');
            const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
            const confirmPassword = document.getElementById('confirmPassword');

            togglePassword.addEventListener('click', function () {
                // Toggle the type attribute
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                
                // Toggle the eye / eye-slash icon
                this.classList.toggle('fa-eye-slash');
            });

            toggleConfirmPassword.addEventListener('click', function () {
                const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                confirmPassword.setAttribute('type', type);
                this.classList.toggle('fa-eye-slash');
            });
        });
    </script>
}
