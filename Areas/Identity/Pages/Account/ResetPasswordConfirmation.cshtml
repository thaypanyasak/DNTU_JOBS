@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<style>
    body {
        background-color: #eef2f7;
        font-family: 'Poppins', sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .confirmation-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .confirmation-card {
        background-color: #fff;
        border-radius: 12px;
        padding: 40px 30px;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .confirmation-card h1 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .confirmation-card p {
            font-size: 1rem;
            color: #7f8c8d;
            margin-bottom: 20px;
        }

        .confirmation-card a {
            font-size: 1rem;
            color: #3498db;
            text-decoration: none;
            font-weight: 500;
        }

            .confirmation-card a:hover {
                text-decoration: underline;
            }

        .confirmation-card .success-icon {
            font-size: 3rem;
            color: #2ecc71;
            margin-bottom: 20px;
        }

    @@media screen and (max-width: 480px) {
        .confirmation-card {
            padding: 20px;
        }

            .confirmation-card h1 {
                font-size: 1.5rem;
            }
    }
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1>Xác nhận đặt lại mật khẩu</h1>
        <p>
            Mật khẩu của bạn đã được đặt lại thành công.
        </p>
        <p>
            Vui lòng <a asp-page="./Login">nhấp vào đây để đăng nhập</a>.
        </p>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
